<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bishe.fragment.waimaiTaskFragment">
    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/task_name3"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:hint="为您的任务起个醒目的标题吧！"
        android:background="@drawable/edittext2"
        />
    <EditText
        android:id="@+id/task_money3"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/task_name3"
        android:layout_marginTop="15dp"
        android:hint="您想支付的跑腿费：(元)"
        android:background="@drawable/edittext2"
        />
    <TextView
        android:id="@+id/time_text3"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="15sp"
        android:layout_below="@id/task_money3"
        android:layout_alignLeft="@id/task_money3"
        android:text="您希望任务用时："/>
    <Spinner
        android:id="@+id/time_spinner_checkText3"
        android:layout_below="@id/task_money3"
        android:layout_toRightOf="@+id/time_text3"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignTop="@+id/time_text3"
        android:layout_alignBottom="@+id/time_text3"
        android:layout_height="35dp"/>
    <EditText
        android:id="@+id/task_getplace3"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/time_text3"
        android:layout_marginTop="15dp"
        android:hint="外卖领取地点："
        android:background="@drawable/edittext2"
        />
    <EditText
        android:id="@+id/task_postplace3"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/task_getplace3"
        android:layout_marginTop="15dp"
        android:hint="外卖送达地点："
        android:background="@drawable/edittext2"
        />
    <RelativeLayout
        android:id="@+id/layout_addPic3"
        android:layout_below="@+id/task_postplace3"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:gravity="center"
        android:background="@drawable/edittext2"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/task_addPicture3"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:src="@drawable/add_picture"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/text_addImg3"
            android:layout_toEndOf="@+id/task_addPicture3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击添加图片"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/task_deletePicture3"
            android:layout_toRightOf="@+id/task_addPicture3"
            android:padding="1dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cha"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/task_introduce3"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_addPic3"
        android:layout_marginTop="15dp"
        android:hint="想对送货员说什么就请在这里说吧："
        android:background="@drawable/edittext2"
        />
    <TextView
        android:id="@+id/textNum3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task_introduce3"
        android:layout_alignEnd="@+id/task_introduce3"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"/>
    <Button
        android:id="@+id/task_commit3"
        android:layout_below="@+id/task_introduce3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="提交"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/select_load_bt"/>


</RelativeLayout>