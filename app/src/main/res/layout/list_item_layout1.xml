<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/item_pic1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/wash" />
    <TextView
        android:id="@+id/item_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_pic1"
        android:layout_alignStart="@id/item_pic1"
        android:layout_alignEnd="@id/item_pic1"
        android:gravity="center"
        android:textSize="11sp"
        android:text="洗衣"/>
    <TextView
        android:id="@+id/item_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxEms="6"
        android:singleLine="true"
        android:textSize="15sp"
        android:text="这是洗衣任务哦" />
    <TextView
        android:id="@+id/item_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_title1"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="2021-02-24 18:56"
        android:layout_marginEnd="20dp"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/item_getPlace1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="接取地址：学一公寓哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12sp"
        android:maxEms="15"/>
    <TextView
        android:id="@+id/item_postPlace1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配送地址：学一公寓哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="15"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_state1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_pic1"
        android:layout_alignEnd="@id/item_time1"
        android:text="派送中"/>
</RelativeLayout>