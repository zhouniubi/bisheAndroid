<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/layout_style2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_pic2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:src="@drawable/wash" />

    <TextView
        android:id="@+id/item_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_pic2"
        android:layout_alignStart="@id/item_pic2"
        android:layout_alignEnd="@id/item_pic2"
        android:gravity="center"
        android:text="洗衣"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/item_pic2"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxEms="6"
        android:singleLine="true"
        android:text="这是洗衣任务哦"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/useTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title2"
        android:layout_marginTop="3dp"
        android:layout_alignStart="@id/item_title2"
        android:text="任务时常：5min"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_title2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:text="发布时间:2021-02-24 18:56"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_time22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_time2"
        android:layout_alignStart="@id/item_time2"
        android:layout_alignBottom="@id/useTime"
        android:gravity="center"
        android:text="接收时间:2021-03-26 09:55"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_pic2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_getPlace2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:text="接取地址：学一公寓哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_postPlace2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:text="配送地址：学一公寓哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_state2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/item_time2"
        android:layout_alignBottom="@id/item_pic2"
        android:text="派送中" />

    <TextView
        android:id="@+id/item_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/item_name2"
        android:layout_alignStart="@+id/item_name2"
        android:text="派送者：周哥"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_poster"
        android:layout_alignEnd="@id/item_time2"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:text="详情：请周哥速度派送哦hhhhhhhhhaaaahhhh"
        android:textSize="12sp" />

</RelativeLayout>

