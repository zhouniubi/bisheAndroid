<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext2"
            android:hint="请输入手机号:"
            android:textColorHint="#CFCCCC"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/cha5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@id/login_phone"
            android:layout_alignBottom="@id/login_phone"
            android:padding="10dp"
            android:src="@drawable/cha"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext2"
            android:hint="请输入密码(密码长度为6~15位):"
            android:maxLength="15"
            android:inputType="textPassword"
            android:textColorHint="#CFCCCC"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/eye2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@id/login_pwd"
            android:layout_alignBottom="@id/login_pwd"
            android:padding="10dp"
            android:src="@drawable/eye_close"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/noticeMsglogin_pwd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pwd"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/login_radioGropSex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/radio_bt_boy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="100dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/select_radio_bt_image"
            android:button="@null"
            android:padding="5dp" />

        <TextView
            android:id="@+id/text_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="男"
            android:layout_gravity="center_vertical"
            android:textColor="@color/select_text_color"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_bt_girl"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="100dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/select_radio_bt_image"
            android:button="@null"
            android:padding="5dp" />

        <TextView
            android:id="@+id/text_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="女"
            android:layout_gravity="center_vertical"
            android:textColor="@color/select_text_color"
            android:textSize="20sp" />
    </RadioGroup>
    <RadioGroup
        android:id="@+id/login_radioGropIdentity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <RadioButton
            android:id="@+id/radio_bt_teacher"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/select_radio_bt_shape"
            android:button="@null"
            android:text="教师"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="10dp" />

        <RadioButton
            android:id="@+id/radio_bt_student"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/select_radio_bt_shape"
            android:button="@null"
            android:text="学生"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="10dp" />

    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/yanzheng_code"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/edittext2"
        android:layout_marginStart="50dp"
        android:hint="点击按钮获得验证码："
        android:textColorHint="#CFCCCC"
        android:textSize="15sp"
        />
        <Button
            android:id="@+id/getyanzheng"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginLeft="265dp"
            android:gravity="center"
            android:textSize="13sp"
            android:background="@drawable/select_yanzhen_bt"
            android:textColor="@color/white"
            android:text="验证码"/>
    </RelativeLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/select_radio_bt_shape"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="15sp" />
</LinearLayout>