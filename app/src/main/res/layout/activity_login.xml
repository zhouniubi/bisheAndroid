<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext2"
            android:hint="请输入手机号:"
            android:textColorHint="#CFCCCC"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/cha5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@id/login_phone"
            android:layout_alignBottom="@id/login_phone"
            android:padding="10dp"
            android:src="@drawable/cha"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/noticeMsg1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_phone"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext2"
            android:hint="请输入密码(密码长度为6~15位):"
            android:inputType="textPassword"
            android:textColorHint="#CFCCCC"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/eye3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@id/login_pwd"
            android:layout_alignBottom="@id/login_pwd"
            android:padding="10dp"
            android:src="@drawable/eye_close"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/noticeMsg2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pwd"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/login_radioGrop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_bt_boy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/radio_bt_choose"
            android:button="@null"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="男"
            android:textColor="@drawable/select_text_color"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/radio_bt_girl"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/radio_bt_choose"
            android:button="@null"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="女"
            android:textColor="@drawable/select_text_color"
            android:textSize="25sp" />
    </RadioGroup>

    <Button
        android:id="@+id/forget_btn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/select_load_bt"
        android:gravity="center"
        android:text="✔"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>