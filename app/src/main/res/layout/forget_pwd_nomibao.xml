<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/login_phone_forget"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext2"
            android:hint="请输入手机号:"
            android:textColorHint="#CFCCCC"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/cha9"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@id/login_phone_forget"
            android:layout_alignBottom="@id/login_phone_forget"
            android:padding="10dp"
            android:src="@drawable/cha"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/noticeMsglogin_phone_forget"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_phone_forget"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="2dp">

        <EditText
            android:id="@+id/login_pwd_forget"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext2"
            android:hint="请输入密码(6~15位数字字母组合):"
            android:maxLength="15"
            android:inputType="textPassword"
            android:textColorHint="#CFCCCC"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/eye5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@id/login_pwd_forget"
            android:layout_alignBottom="@id/login_pwd_forget"
            android:padding="10dp"
            android:src="@drawable/eye_close"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/noticeMsglogin_pwd_forget"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pwd_forget"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="2dp">

        <EditText
            android:id="@+id/login_pwd_verify_forget"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext2"
            android:hint="确认密码:"
            android:maxLength="15"
            android:inputType="textPassword"
            android:textColorHint="#CFCCCC"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/eye6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@id/login_pwd_verify_forget"
            android:layout_alignBottom="@id/login_pwd_verify_forget"
            android:padding="10dp"
            android:src="@drawable/eye_close"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/noticeMsglogin_pwd_verify_forget"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pwd_verify_forget"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/yanzheng_code_forget"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext2"
            android:layout_marginStart="50dp"
            android:hint="点击按钮获得验证码："
            android:textColorHint="#CFCCCC"
            android:textSize="15sp"
            />
        <ImageView
            android:id="@+id/cha8"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@id/yanzheng_code_forget"
            android:layout_alignBottom="@id/yanzheng_code_forget"
            android:padding="10dp"
            android:src="@drawable/cha"
            android:visibility="invisible" />
        <Button
            android:id="@+id/getyanzheng_forget"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginLeft="265dp"
            android:gravity="center"
            android:textSize="13sp"
            android:background="@drawable/select_yanzhen_bt"
            android:textColor="@color/white"
            android:text="验证码"/>
        <TextView
            android:id="@+id/noticeMsglogin_yanzheng_forget"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/yanzheng_code_forget"
            android:layout_gravity="center"
            android:layout_marginStart="55dp"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </RelativeLayout>
    <Button
        android:id="@+id/login_btn_forget"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/select_yanzhen_bt"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="15sp" />
</LinearLayout>